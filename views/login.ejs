<!DOCTYPE html>
<html dir="ltr" lang="en-US">
<head>

	<meta http-equiv="content-type" content="text/html; charset=utf-8">
	<meta http-equiv="x-ua-compatible" content="IE=edge">
	<meta name="author" content="SemiColonWeb">
	<meta name="description" content="Get Canvas to build powerful websites easily with the Highly Customizable &amp; Best Selling Bootstrap Template, today.">

	<!-- Font Imports -->
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Playfair+Display:ital@0;1&display=swap" rel="stylesheet">

	<!-- Core Style -->
	<link rel="stylesheet" href="css/style_login.css">

	<!-- Font Icons -->
	<link rel="stylesheet" href="./Login/css/font-icons.css">

	<!-- Custom CSS -->
	<link rel="stylesheet" href="./Login/css/custom.css">
	<meta name="viewport" content="width=device-width, initial-scale=1">

	<!-- Document Title
	============================================= -->
	<title>Login VH</title>

</head>

<body class="stretched">

	<!-- Document Wrapper
	============================================= -->
	<div id="wrapper">

		<!-- Content
		============================================= -->
		<section id="content">
			<div class="content-wrap py-0">

				<div class="row align-items-stretch g-0 min-vh-100">
					<div class="col-md-6">
						<img src="https://cdn.pixabay.com/photo/2017/09/05/10/19/business-2717063_1280.jpg" alt="Image" class="object-cover w-100 h-100">
					</div>

					<div class="col-md-6 bg-contrast-100">
						<div class="text-center">
							<!-- <a href="index.html"><img src="images/logo@2x.png" alt="Canvas Logo" style="height: 100px;"></a> -->
						</div>

						<div class="card mx-auto my-5 rounded-4 bg-transparent border-0" style="max-width: 360px;" id="login">
							<div class="card-body p-0">
								<form id="login-form" name="login-form" class="mb-0" action="/loginAuth" method="post">
									<div class="fancy-title title-border title-center mb-4">
										<h1 class="fs-5 fw-semibold">Login to your Account</h1>
									</div>

									<div class="row">
										<div class="col-12 form-group mb-4">
											<label for="login-form-username">Username</label>
											<input type="text" id="login-form-username" name="username" value="" class="form-control not-dark" placeholder="กรุณากรอกชื่อผู้ใช้">
										</div>

										<div class="col-12 form-group mb-4">
											<div class="d-flex justify-content-between">
												<label for="login-form-password">Password</label>
												<a href="#" class="fw-semibold text-smaller">Forgot Password?</a>
											</div>
											<input type="password" id="login-form-password" name="password" value="" class="form-control not-dark" placeholder="กรุณากรอกรหัสผ่าน">
											<a href="#" onclick="showRegister()" class="fw-semibold text-smaller mt-3" style="float: right;">Register</a>
											<!-- <a href="/" class="fw-semibold text-smaller mt-3" style="float: right;">Go back</a>
											<a href="./dist/index.html" class="fw-semibold text-smaller mt-3" style="float: right; margin-right: 1rem;">Go to admin</a> -->
										</div>

										<div class="col-12 form-group mb-0">
											<button class="btn btn-lg text-white bg-black h-bg-color d-block w-100 m-0" id="login-form-submit" name="login-form-submit" value="login">Continue</button>
										</div>
									</div>
								</form>

								
							</div>
						</div>

						<div class="card mx-auto my-5 rounded-4 bg-transparent border-0" style="max-width: 360px;" id="register">
							<div class="card-body p-0">
								<form id="login-form" name="login-form" class="mb-0" action="/loginAuth" method="post">
									<div class="fancy-title title-border title-center mb-4">
										<h1 class="fs-5 fw-semibold">Register</h1>
									</div>

									<div class="row">
										<div class="col-12 form-group mb-4">
											<label for="login-form-username">Username</label>
											<input type="text" id="login-form-username" name="username" value="" class="form-control not-dark" placeholder="กรุณากรอกชื่อผู้ใช้">
										</div>

										<div class="col-12 form-group mb-4">
											<div class="d-flex justify-content-between">
												<label for="login-form-password">Password</label>
												<a href="#" class="fw-semibold text-smaller">Forgot Password?</a>
											</div>
											<input type="password" id="login-form-password" name="password" value="" class="form-control not-dark" placeholder="กรุณากรอกรหัสผ่าน">
											<!-- <a href="#" onclick="showRegister()" class="fw-semibold text-smaller mt-3" style="float: right;">Register</a> -->
											<a href="#" onclick="showLogin()" class="fw-semibold text-smaller mt-3" style="float: right;">Log in</a>
											<!-- <a href="./dist/index.html" class="fw-semibold text-smaller mt-3" style="float: right; margin-right: 1rem;">Go to admin</a> -->
										</div>

										<div class="col-12 form-group mb-0">
											<button class="btn btn-lg text-white bg-black h-bg-color d-block w-100 m-0" id="login-form-submit" name="login-form-submit" value="login">Continue</button>
										</div>
									</div>
								</form>

								
							</div>
						</div>

						<div class="text-center text-muted mt-6"><small>Copyrights &copy; All Rights Reserved by Canvas Inc.</small></div>
						
					</div>

					
				</div>

			</div>
		</section><!-- #content end -->

	</div><!-- #wrapper end -->

	<!-- Go To Top
	============================================= -->
	<div id="gotoTop" class="uil uil-angle-up"></div>

	<!-- JavaScripts
	============================================= -->
	<script src="./js/script.js"></script>
	<script src="./Login/js/plugins.min.js"></script>
	<script src="./Login/js/functions.bundle.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

	<%
	if (locals.error) {
		const error = locals.error; // Correct the variable name here
	%>
	<script>
		Swal.fire({
			title: "System Error?",
			text: "<%= error %>", // Use <%= %> to output the error message
			icon: "error"
		});
	</script>
	<%
		}
	%>

</body>
</html>